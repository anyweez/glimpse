<?xml version="1.0" encoding="utf-8"?>
<Map srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0 +k=1.0 +units=m +nadgrids=@null +no_defs +over">
  <Style name="Cities">
    <Rule>
        <ShieldSymbolizer 
            face-name="DejaVu Sans Book" size="11" fill="#333"
            file="./icons/village-11.svg" 
            horizontal-alignment="middle" vertical-alignment="middle" 
            halo-fill="white" halo-radius="1"
            unlock-image="true"
            placement="point" dy="10"
            >[name]</ShieldSymbolizer>
    </Rule>
  </Style>

  <Layer name="cities" srs="+init=epsg:4326">
    <StyleName>Cities</StyleName>
    <Datasource>
        <Parameter name="type">postgis</Parameter>
        <Parameter name="host">localhost</Parameter>
        <Parameter name="dbname">glimpse</Parameter>
        <Parameter name="geometry_field">geometry</Parameter>
        <Parameter name="table">cities</Parameter>
        <Parameter name="extent">-180,-90,180,90</Parameter>
    </Datasource>
  </Layer>
</Map>