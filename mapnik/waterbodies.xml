<?xml version="1.0" encoding="utf-8"?>
<Map srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0 +k=1.0 +units=m +nadgrids=@null +no_defs +over">
  <Style name="WaterBodies">
    <Rule>
      <!-- <PolygonSymbolizer fill="#ff0000" 
        fill-opacity="0.4"
        smooth="0.4" />
      <LineSymbolizer stroke="black" stroke-width="0.6" 
        smooth="0.4" /> -->
      <TextSymbolizer
        face-name="DejaVu Serif Italic" size="10" fill="#00538F" 
        halo-fill="#E5DADA" halo-radius="1"
        placement="interior" allow-overlap="false">
        [name]
      </TextSymbolizer>
    </Rule>
  </Style>

  <Layer name="waterbodies" srs="+init=epsg:4326">
    <StyleName>WaterBodies</StyleName>
    <Datasource>
        <Parameter name="type">postgis</Parameter>
        <Parameter name="host">localhost</Parameter>
        <Parameter name="dbname">glimpse</Parameter>
        <Parameter name="geometry_field">geometry</Parameter>
        <Parameter name="table">waterbodies</Parameter>
        <Parameter name="extent">-180,-90,180,90</Parameter>
    </Datasource>
  </Layer>

</Map>